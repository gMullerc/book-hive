{
  "name": "bookhive.client",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "docker:clean": "docker rm -vf $(docker ps -aq) && docker rmi -f $(docker images -aq)",
    "docker:build": "docker buildx build --platform linux/amd64 --no-cache -t gcr.io/bookhive.client .",
    "docker:run": "docker run --name bookhive.client -p 8080:80 -d gcr.io/bookhive.client",
    "docker:tag": "docker tag gcr.io/bookhive.client gcr.io/enhanced-prism-457700-m9/bookhive.client:latest",
    "docker:push": "docker push gcr.io/enhanced-prism-457700-m9/bookhive.client:latest",
    "docker:deploy": "gcloud run deploy bookhive-client --image gcr.io/enhanced-prism-457700-m9/bookhive.client:latest --platform managed --region us-central1 --allow-unauthenticated",
    "docker:release": "npm run docker:build && npm run docker:tag && npm run docker:push && npm run docker:deploy"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@hookform/resolvers": "^5.0.1",
    "@mui/icons-material": "^7.0.2",
    "@mui/material": "^7.0.2",
    "axios": "^1.8.4",
    "date-fns": "^4.1.0",
    "imask": "^7.6.1",
    "lodash": "^4.17.21",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.3.8",
    "react-router-dom": "^7.5.0",
    "typescript": "^5.8.3",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.24.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "vite": "^6.2.0"
  }
}
